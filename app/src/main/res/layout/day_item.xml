<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300px"
    android:layout_centerHorizontal="true"
    android:layout_marginHorizontal="12.25px"
    android:layout_marginVertical="8px"
    android:background="@drawable/shape_reg_bg_white_borer_corner_shadow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/ivDayNutrition"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/image_1" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvDayNutrition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="SF Pro Display"
            android:text="tastdf"
            android:textColor="#414141"
            android:textFontWeight="400" />
    </LinearLayout>
</androidx.cardview.widget.CardView>